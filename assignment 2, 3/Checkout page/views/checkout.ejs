<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Checkout - Zoo Store</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
    <!-- Progress Header -->
    <div class="progress-header">
        <div class="container">
            <div class="progress-steps">
                <div class="step completed">
                    <div class="step-circle">1</div>
                    <div class="step-label">Cart</div>
                    <div class="step-line"></div>
                </div>
                <div class="step completed">
                    <div class="step-circle">2</div>
                    <div class="step-label">Address</div>
                    <div class="step-line"></div>
                </div>
                <div class="step active">
                    <div class="step-circle">3</div>
                    <div class="step-label">Payment</div>
                    <div class="step-line"></div>
                </div>
                <div class="step">
                    <div class="step-circle">4</div>
                    <div class="step-label">Review</div>
                    <div class="step-line"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container checkout-container">
        <div class="row g-4">
            <!-- Checkout Form (Left Column) -->
            <div class="col-12 col-md-7">
                <!-- Customer Information Section -->
                <div class="checkout-form">
                    <h2 class="section-title">Customer Information</h2>
                    
                    <form id="checkoutForm" novalidate>
                        <!-- Full Name -->
                        <div class="form-group">
                            <label for="fullName" class="form-label">Full Name <span style="color: #dc3545;">*</span></label>
                            <input type="text" class="form-control" id="fullName" name="fullName" placeholder="Enter your full name" required aria-describedby="fullNameHelp">
                            <div class="invalid-feedback">
                                Full name is required and must be at least 3 characters.
                            </div>
                        </div>

                        <!-- Email -->
                        <div class="form-group">
                            <label for="email" class="form-label">Email Address <span style="color: #dc3545;">*</span></label>
                            <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email address" required aria-describedby="emailHelp">
                            <div class="invalid-feedback">
                                Please enter a valid email address.
                            </div>
                        </div>

                        <!-- Phone -->
                        <div class="form-group">
                            <label for="phone" class="form-label">Phone Number <span style="color: #dc3545;">*</span></label>
                            <input type="tel" class="form-control" id="phone" name="phone" placeholder="+1 (555) 000-0000" required aria-describedby="phoneHelp">
                            <div class="invalid-feedback">
                                Phone number is required and must be at least 10 digits.
                            </div>
                        </div>

                        <div class="divider"></div>

                        <!-- Shipping Address Section Title -->
                        <h3 class="section-title" style="margin-top: 2rem; color: #212529;">Shipping Address</h3>

                        <!-- Address -->
                        <div class="form-group">
                            <label for="address" class="form-label">Street Address <span style="color: #dc3545;">*</span></label>
                            <input type="text" class="form-control" id="address" name="address" placeholder="Enter street address" required aria-describedby="addressHelp">
                            <div class="invalid-feedback">
                                Street address is required.
                            </div>
                        </div>

                        <!-- City and Postal Code Row -->
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="city" class="form-label">City <span style="color: #dc3545;">*</span></label>
                                    <input type="text" class="form-control" id="city" name="city" placeholder="Enter city" required aria-describedby="cityHelp">
                                    <div class="invalid-feedback">
                                        City is required.
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="postalCode" class="form-label">Postal Code <span style="color: #dc3545;">*</span></label>
                                    <input type="text" class="form-control" id="postalCode" name="postalCode" placeholder="Enter postal code" required aria-describedby="postalCodeHelp">
                                    <div class="invalid-feedback">
                                        Postal code is required and must be numeric (4-6 digits).
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Country -->
                        <div class="form-group">
                            <label for="country" class="form-label">Country <span style="color: #dc3545;">*</span></label>
                            <select class="form-select" id="country" name="country" required aria-describedby="countryHelp">
                                <option value="">Select a country</option>
                                <option value="United States">United States</option>
                                <option value="Canada">Canada</option>
                                <option value="Mexico">Mexico</option>
                                <option value="United Kingdom">United Kingdom</option>
                                <option value="Germany">Germany</option>
                                <option value="France">France</option>
                                <option value="Spain">Spain</option>
                                <option value="Italy">Italy</option>
                                <option value="Australia">Australia</option>
                                <option value="Japan">Japan</option>
                                <option value="China">China</option>
                                <option value="India">India</option>
                                <option value="Brazil">Brazil</option>
                            </select>
                            <div class="invalid-feedback">
                                Please select a country.
                            </div>
                        </div>

                        <!-- Billing Address Checkbox -->
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="billingSame" name="billingSame" checked aria-describedby="billingSameHelp">
                            <label class="form-check-label" for="billingSame">
                                Billing address same as shipping address
                            </label>
                        </div>

                        <div class="divider"></div>

                        <!-- Payment Method Section -->
                        <h3 class="section-title" style="margin-top: 2rem; color: #212529;">Payment Method</h3>

                        <!-- Card Option -->
                        <div class="payment-method active" id="cardPaymentContainer">
                            <label class="payment-label">
                                <input type="radio" name="paymentMethod" value="card" id="cardPayment" checked required>
                                <span>Credit/Debit Card</span>
                            </label>
                            <div class="payment-details show" id="cardDetails">
                                <div class="form-group">
                                    <label for="cardholderName" class="form-label">Cardholder Name <span style="color: #dc3545;">*</span></label>
                                    <input type="text" class="form-control" id="cardholderName" name="cardholderName" placeholder="Name on card" required aria-describedby="cardholderNameHelp">
                                    <div class="invalid-feedback">
                                        Cardholder name is required and must be at least 3 characters.
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="cardNumber" class="form-label">Card Number <span style="color: #dc3545;">*</span></label>
                                    <input type="text" class="form-control" id="cardNumber" name="cardNumber" placeholder="1234 5678 9012 3456" maxlength="19" required aria-describedby="cardNumberHelp">
                                    <small class="form-text">Enter 16-digit card number</small>
                                    <div class="invalid-feedback">
                                        Card number is required and must be exactly 16 digits.
                                    </div>
                                </div>

                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="expiryDate" class="form-label">Expiry Date <span style="color: #dc3545;">*</span></label>
                                            <input type="text" class="form-control" id="expiryDate" name="expiryDate" placeholder="MM/YY" maxlength="5" required aria-describedby="expiryDateHelp">
                                            <div class="invalid-feedback">
                                                Expiry date is required (format: MM/YY).
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="cvv" class="form-label">CVV <span style="color: #dc3545;">*</span></label>
                                            <input type="text" class="form-control" id="cvv" name="cvv" placeholder="123" maxlength="4" required aria-describedby="cvvHelp">
                                            <small class="form-text">3-4 digit security code</small>
                                            <div class="invalid-feedback">
                                                CVV is required (3-4 digits).
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- COD Option -->
                        <div class="payment-method" id="codPaymentContainer">
                            <label class="payment-label">
                                <input type="radio" name="paymentMethod" value="cod" id="codPayment" required>
                                <span>Cash on Delivery (COD)</span>
                            </label>
                            <div class="payment-details" id="codDetails">
                                <p style="color: #6c757d; margin: 0;">Pay securely when your order arrives at your doorstep.</p>
                            </div>
                        </div>

                        <!-- Wallet Option -->
                        <div class="payment-method" id="walletPaymentContainer">
                            <label class="payment-label">
                                <input type="radio" name="paymentMethod" value="wallet" id="walletPayment" required>
                                <span>Zoo Store Wallet</span>
                            </label>
                            <div class="payment-details" id="walletDetails">
                                <p style="color: #6c757d; margin-bottom: 1rem;">Available Balance: <strong style="color: #212529;">$250.00</strong></p>
                                <p style="color: #6c757d; margin: 0;">You can reload your wallet at any time from your account settings.</p>
                            </div>
                        </div>

                        <div class="divider"></div>

                        <!-- Review & Terms Section -->
                        <h3 class="section-title" style="margin-top: 2rem; color: #212529;">Order Review</h3>

                        <div style="background-color: #f0fdf4; padding: 1rem; border-radius: 6px; margin-bottom: 1.5rem;">
                            <ul style="margin: 0; padding-left: 1.5rem; color: #212529;">
                                <li>Review your information above</li>
                                <li>Check order summary on the right</li>
                                <li>Accept terms and conditions</li>
                                <li>Click "Place Order" to proceed</li>
                            </ul>
                        </div>

                        <!-- Terms Checkbox -->
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="terms" name="terms" required aria-describedby="termsHelp">
                            <label class="form-check-label" for="terms">
                                I agree to the <a href="#" style="color: #2ecc71; text-decoration: none;">Terms & Conditions</a> and <a href="#" style="color: #2ecc71; text-decoration: none;">Privacy Policy</a> <span style="color: #dc3545;">*</span>
                            </label>
                            <div class="invalid-feedback">
                                You must accept the terms and conditions to proceed.
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="btn-group-checkout">
                            <button type="button" class="btn btn-secondary" id="continueShoppingBtn">Continue Shopping</button>
                            <button type="submit" class="btn btn-primary" id="placeOrderBtn">Place Order</button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Order Summary (Right Column - Sticky on Desktop) -->
            <div class="col-12 col-md-5">
                <div class="order-summary">
                    <h2 class="summary-title">Order Summary</h2>

                    <!-- Product List -->
                    <div class="product-list" id="cartItemsList">
                        <!-- Cart items will be populated here -->
                    </div>

                    <!-- Coupon Section -->
                    <div class="coupon-section">
                        <label class="coupon-label">Have a coupon code?</label>
                        <div class="coupon-input-group">
                            <input type="text" class="coupon-input" id="couponCode" placeholder="Enter code" aria-label="Coupon code">
                            <button type="button" class="coupon-btn" id="applyCouponBtn" aria-label="Apply coupon">Apply</button>
                        </div>
                    </div>

                    <!-- Summary Breakdown -->
                    <div class="summary-row">
                        <span class="summary-label">Subtotal:</span>
                        <span class="summary-value">$<%= subtotal %></span>
                    </div>
                    <div class="summary-row">
                        <span class="summary-label">Shipping:</span>
                        <span class="summary-value">$<%= shipping %></span>
                    </div>
                    <div class="summary-row">
                        <span class="summary-label">Tax (10%):</span>
                        <span class="summary-value">$<%= tax %></span>
                    </div>
                    <div class="summary-row total">
                        <span class="summary-label">Grand Total:</span>
                        <span class="summary-value">$<%= totalAmount %></span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Custom Checkout Script -->
    <script src="/js/checkout.js"></script>
</body>

</html>
