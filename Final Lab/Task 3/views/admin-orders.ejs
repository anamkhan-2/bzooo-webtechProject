<h2>Manage Orders</h2>

<table>
  <thead>
    <tr>
      <th>Order ID</th>
      <th>Customer Name</th>
      <th>Total Amount</th>
      <th>Status</th>
      <th>Order Date</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% orders.forEach(order => { %>
      <tr>
        <td><%= order._id %></td>
        <td><%= order.customerName %></td>
        <td>$<%= order.totalAmount.toFixed(2) %></td>
        <td><%= order.orderStatus %></td>
        <td><%= new Date(order.createdDate).toLocaleDateString() %></td>
        <td>
          <% if (order.orderStatus === 'Pending') { %>
            <form action="/admin/orders/<%= order._id %>/confirm" method="POST" style="display: inline;">
              <button type="submit" class="btn-edit">Confirm</button>
            </form>
            <form action="/admin/orders/<%= order._id %>/cancel" method="POST" style="display: inline;">
              <button type="submit" class="btn-delete">Cancel</button>
            </form>
          <% } else { %>
            <span><%= order.orderStatus %></span>
          <% } %>
        </td>
      </tr>
    <% }); %>
  </tbody>
</table>
