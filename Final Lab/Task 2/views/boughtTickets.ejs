<%- include("partials/header") %>

<div class="bought-tickets-container">
  <h1>Bought Tickets</h1>
  <p class="tickets-subtitle">Explore all available ticket options for your Be Zoo visit</p>

  <form method="GET" action="/bought-tickets" class="filter-form">
    <div class="form-group">
      <label for="minPrice">Min Price (Rs)</label>
      <input type="number" id="minPrice" name="minPrice" placeholder="Min Price" value="<%= minPrice %>" min="0">
    </div>
    <div class="form-group">
      <label for="maxPrice">Max Price (Rs)</label>
      <input type="number" id="maxPrice" name="maxPrice" placeholder="Max Price" value="<%= maxPrice %>" min="0">
    </div>
    <button type="submit" class="filter-btn">üîç Filter</button>
    <% if (minPrice || maxPrice) { %>
      <a href="/bought-tickets" class="reset-btn">‚úï Reset</a>
    <% } %>
  </form>

  <div class="tickets">
    <% tickets.forEach(ticket => { %>
      <div class="card">
        <h3><%= ticket.name %></h3>
        <p><%= ticket.description %></p>
        <strong>Price: Rs <%= ticket.price %></strong>
      </div>
    <% }) %>
  </div>

  <div class="pagination">
    <% for(let i = 1; i <= totalPages; i++) { %>
      <a href="?page=<%= i %>&minPrice=<%= minPrice %>&maxPrice=<%= maxPrice %>"
         class="<%= currentPage === i ? 'active' : '' %>">
        <%= i %>
      </a>
    <% } %>
  </div>
</div>

<%- include("partials/footer") %>
